{{>header}}

 <div class="row-fluid">
   <div class="span6">
     {{#info}}
       <table>
         <tr>
           <td>
             Title:
           </td>
           <td>
             {{title}}
           </td>
         </tr>
         <tr>
           <td>
             Author:
           </td>
           <td>
             {{author}}
           </td>
         </tr>
         <tr>
           <td>
             Year:
           </td>
           <td>
             {{publishing-date}}
           </td>
         </tr>
         <tr>
           <td>
             Publisher:
           </td>
           <td>
             {{publisher}}
           </td>
         </tr>
       </table>
       <p>
         <strong>
           TODO: Convert prices log to seq of hash-map, so that we can display using Mustache
         </strong>
         <br />
         {{#prices}}
           {{prices}}
         {{/prices}}
       </p>
   </div>
   <div class="span6">
     <p>
       {{#image}}
         <img src="{{image}}" alt="{{title}}"/>
       {{/image}}
     </p>
   </div>
 </div>
{{/info}}

<p>
  Link to this page: <a href="/{{isbn}}">http://isbn.net.in/{{isbn}}</a>
</p>

{{>footer}}
